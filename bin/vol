#!/bin/bash

usage() {
	echo "Usage: $(basename $0) <up|down|mute|100%>

    Manipulate the volume.
"
}

shopt -s extglob
case "$1" in
  up)   amixer set -q Master 5%+ ;;
  down) amixer set -q Master 5%- ;;
  mute) amixer set -q Master toggle ;;
  +([0-9])?(%)) amixer set -q Master "${1%\%}%" ;;
  "")   amixer get Master ;;
  *)    usage ;;
esac

